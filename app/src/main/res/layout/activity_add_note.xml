<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackground"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.q.slavskehelp.AddNote">
    <ScrollView
        android:id="@+id/add_scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/layout_add_note"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="@string/prompt"
                android:layout_margin="4dp"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_gravity="center"
                />
            <Spinner
                android:id="@+id/category_spinner"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="4dp"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_gravity="center"
                >
            </Spinner>

            <TextView
                android:id="@+id/typeNameView"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="@string/type_name"
                android:layout_margin="4dp"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_gravity="center"
                />
            <Spinner
                android:visibility="gone"
                android:id="@+id/type_spinner"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="4dp"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_gravity="center"
                >
            </Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/note_name"
                android:layout_margin="4dp"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_gravity="center"
                />
            <EditText
                android:inputType="text|textMultiLine"
                android:id="@+id/note_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textSize="14sp"
                android:minHeight="36dp"
                android:layout_gravity="center"
                android:background="@drawable/border_black"
                android:padding="2dp"
                >
            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/note_description"
                android:layout_margin="4dp"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_gravity="center"
                />
            <EditText
                android:inputType="text|textMultiLine"
                android:id="@+id/note_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:background="@drawable/border_black"
                android:minHeight="72dp"
                android:padding="2dp"
                >
            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/note_price"
                android:layout_margin="4dp"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_gravity="center"
                />
            <EditText
                android:inputType="number|numberDecimal"
                android:id="@+id/note_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textSize="14sp"
                android:minHeight="36dp"
                android:layout_gravity="center"
                android:background="@drawable/border_black"
                android:padding="2dp"
                >
            </EditText>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1.5"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                </LinearLayout>
                <Button
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="@string/note_add"
                    android:background="@drawable/border_button"
                    android:textColor="@color/colorHeaderText"
                    android:onClick="AddClick"
                    android:drawableRight="@drawable/ic_playlist_add_black_24dp"
                    android:drawableEnd="@drawable/ic_playlist_add_black_24dp"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_left"
        android:background="@color/colorBackground"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        app:headerLayout="@layout/navigation_header"
        android:layout_gravity="start">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

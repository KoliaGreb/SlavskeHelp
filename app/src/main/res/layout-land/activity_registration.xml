<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/instruction"
                app:srcCompat="@drawable/ic_1489671798_add_user" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="6"
        android:gravity="center"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:contentDescription="@string/image_login"
                android:src="@mipmap/ic_account_box_black_24dp" />

            <EditText
                android:id="@+id/login_input"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="6"
                android:background="@drawable/border_black"
                android:hint="@string/image_login"
                android:inputType="text"
                android:padding="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_lock_black_24dp" />

            <EditText
                android:id="@+id/password_input"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="6"
                android:background="@drawable/border_black"
                android:hint="@string/image_pass"
                android:inputType="textPassword"
                android:padding="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_lock_open_black_24dp" />

            <EditText
                android:id="@+id/password_check"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="6"
                android:background="@drawable/border_black"
                android:hint="@string/image_pass_check"
                android:inputType="textPassword"
                android:padding="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_recent_actors_black_24dp" />

            <EditText
                android:id="@+id/surname"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="6"
                android:background="@drawable/border_black"
                android:hint="@string/image_surname"
                android:inputType="text"
                android:padding="2dp" />
        </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_contacts_black_24dp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="6"
                android:background="@drawable/border_black"
                android:hint="@string/image_name"
                android:inputType="text"
                android:padding="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_contact_phone_black_24dp" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="6"
                android:background="@drawable/border_black"
                android:hint="@string/image_phone"
                android:inputType="text"
                android:padding="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_contact_mail_black_24dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="6"
                android:background="@drawable/border_black"
                android:hint="@string/image_email"
                android:inputType="text"
                android:padding="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_location_city_black_24dp" />

            <EditText
                android:id="@+id/city"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="6"
                android:background="@drawable/border_black"
                android:hint="@string/image_city"
                android:inputType="text"
                android:padding="2dp" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </LinearLayout>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:background="@drawable/border_button"
                android:gravity="center"
                android:text="@string/regist_button"
                android:textColor="@color/colorHeaderText"

                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorBackground"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>